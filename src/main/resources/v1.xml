<?xml version="1.0" encoding="UTF-8"?>
<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format" font-size="12pt" font-family="Calibre-Regular">

    <fo:layout-master-set>
        <fo:simple-page-master master-name="simpleA4"
                               page-height="297mm"
                               page-width="210mm"
                               margin-top="20mm"
                               margin-bottom="20mm"
                               margin-left="10mm"
                               margin-right="10mm">
            <fo:region-body/>
            <fo:region-before/>
            <fo:region-after display-align="center"/>
        </fo:simple-page-master>
    </fo:layout-master-set>


    <fo:page-sequence initial-page-number="1" master-reference="simpleA4">

        <fo:static-content flow-name="xsl-region-before">
            <fo:block text-align="right" font-size="9pt"
                      margin-bottom="5pt" font-weight="bold" color="#918c97">
                Page
                <fo:page-number/>
                of
                <fo:page-number-citation
                        ref-id="TheVeryLastPage"/>
            </fo:block>

            <#if data.watermark?? && data.watermark>
                <fo:block-container z-index="1" position="absolute" left="5pt" top="5pt"
                                    width="100%" height="100%">
                    <fo:block>
                        <fo:instream-foreign-object>
                            <svg xmlns="http://www.w3.org/2000/svg" width="680" height="920">
                                <text font-family="Arial Black" font-size="100pt"
                                      style="fill:rgb(255,192,192)" x="-10" y="300"
                                      width="680" text-anchor="middle"
                                      transform="rotate(-45, 315, 15)">SAMPLE
                                </text>
                            </svg>
                        </fo:instream-foreign-object>
                    </fo:block>
                </fo:block-container>
            </#if>
        </fo:static-content>

        <fo:static-content flow-name="xsl-region-after">
            <fo:block text-align="center" font-size="small">
            </fo:block>
        </fo:static-content>

        <fo:flow flow-name="xsl-region-body">
            <fo:block font-size="x-large" font-weight="bold" space-before="1em" space-after="1em">
                Payment details
            </fo:block>

            <fo:block>
                <fo:table table-layout="fixed" space-before="10pt" space-after="10pt">
                    <fo:table-column column-number="1" column-width="40mm"/>
                    <fo:table-column column-number="2" column-width="40mm"/>
                    <fo:table-column column-number="3" column-width="10mm"/>
                    <fo:table-column column-number="4" column-width="50mm"/>
                    <fo:table-column column-number="5" column-width="40mm"/>

                    <fo:table-body>
                        <fo:table-row margin-top="10pt">
                            <#if data.txId??>
                                <fo:table-cell border-style="solid" border-width="0pt">
                                    <fo:block font-weight="bold" text-align="left">Tx No.</fo:block>
                                </fo:table-cell>
                                <fo:table-cell border-style="solid" border-width="0pt">
                                    <fo:block text-align="right">
                                        ${data.txId}
                                    </fo:block>
                                </fo:table-cell>
                            <#else>
                                <fo:table-cell border-style="solid" border-width="0pt">
                                    <fo:block font-weight="bold" text-align="left">Payment Identifier</fo:block>
                                </fo:table-cell>
                                <fo:table-cell border-style="solid" border-width="0pt">
                                    <fo:block text-align="right">
                                        <#if data.paymentId??>
                                            ${data.paymentId}
                                        </#if>
                                    </fo:block>
                                </fo:table-cell>
                            </#if>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">
                                    Date of Payment
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.insertedDateTime??>
                                        ${data.insertedDateTime}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Payer Name</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.payer.name??>
                                        ${data.payer.name}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Counterparty Name</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.beneficiary.name??>
                                        ${data.beneficiary.name}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Account Number</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Account Number</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.payer.accountNumber?? && data.payer.accountNumber.value??>
                                        ${data.payer.accountNumber.value}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.beneficiary.accountNumber?? && data.beneficiary.accountNumber.value??>
                                        ${data.beneficiary.accountNumber.value}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Account Number Type</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.payer.accountNumber?? && data.payer.accountNumber.type??>
                                        ${data.payer.accountNumber.type}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Account Number Type</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.beneficiary.accountNumber?? && data.beneficiary.accountNumber.type??>
                                        ${data.beneficiary.accountNumber.type}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Account Country Code</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.payer.accountCountryCode??>
                                        ${data.payer.accountCountryCode}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Account Country Code</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.beneficiary.accountCountryCode??>
                                        ${data.beneficiary.accountCountryCode}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Financial Institution ID</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.payer.financialInstitutionId?? && data.payer.financialInstitutionId.value??>
                                        ${data.payer.financialInstitutionId.value}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Financial Institution ID</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.beneficiary.financialInstitutionId?? && data.beneficiary.financialInstitutionId.value??>
                                        ${data.beneficiary.financialInstitutionId.value}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Financial Institution ID Type</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.payer.financialInstitutionId?? && data.payer.financialInstitutionId.type??>
                                        ${data.payer.financialInstitutionId.type}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Financial Institution ID Type</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.beneficiary.financialInstitutionId?? && data.beneficiary.financialInstitutionId.type??>
                                        ${data.beneficiary.financialInstitutionId.type}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Address</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.payer.address?? && data.payer.address.addressLine??>
                                        ${data.payer.address.addressLine}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Address</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.beneficiary.address?? && data.beneficiary.address.addressLine??>
                                        ${data.beneficiary.address.addressLine}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Posting / Value date</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.postingDate??>
                                        ${data.postingDate}
                                    </#if>
                                    /
                                    <#if data.effectiveDate??>
                                        ${data.effectiveDate}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Payment type</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.paymentTypeCode??>
                                        ${data.paymentTypeCode}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Amount</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.amount?? && data.currencyCode??>
                                        ${data.amount} ${data.currencyCode}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Settlement Date</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.paymentSettlementDate??>
                                        ${data.paymentSettlementDate}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">
                                    Return Date
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.returnSettlementDate??>
                                        ${data.returnSettlementDate}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">
                                    Purpose Code
                                </fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.purposeCode??>
                                        ${data.purposeCode}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt" wrap-option="no-wrap" white-space-treatment="preserve">
                                <fo:block font-weight="bold" text-align="left">Payment reference number</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right">
                                    <#if data.referenceNumber??>
                                        ${data.referenceNumber}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>

                        <fo:table-row margin-top="10pt">
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block font-weight="bold" text-align="left">Description</fo:block>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block/>
                            </fo:table-cell>
                            <fo:table-cell border-style="solid" border-width="0pt">
                                <fo:block text-align="right" wrap-option="no-wrap" white-space-treatment="preserve">
                                    <#if data.description??>
                                        ${data.description}
                                    </#if>
                                </fo:block>
                            </fo:table-cell>
                        </fo:table-row>
                    </fo:table-body>
                </fo:table>
            </fo:block>
            <fo:block id="TheVeryLastPage"></fo:block>
        </fo:flow>
    </fo:page-sequence>
</fo:root>